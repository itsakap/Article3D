<%= form_for @user, {url:'/auths', method:'post'} do |u| %>
    <%= u.text_field :username, :id=> "sign-username", :class=> "userform",:placeholder => "Username" %>
    <%= u.password_field :password, :id=> "sign-password",:class=> "userform", :placeholder => "Password" %>
    <%= u.submit "Sign In", :class => "userform"%>
<% end %>